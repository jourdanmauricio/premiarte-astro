---
import { UserButton } from '@clerk/astro/components';

const user = await Astro.locals.currentUser();
const isAdmin = user?.publicMetadata?.role === 'admin';

console.log('user', user);
if (!user || !isAdmin) {
  return Astro.redirect('/');
}
---

<h1 class='text-4xl'>Dashboard</h1>
<div class='container mx-auto px-4 py-8'>
  <div class='bg-white rounded-lg shadow-md p-6'>
    <div class='flex justify-between items-center mb-6'>
      <h1 class='text-3xl font-bold text-gray-900'>Dashboard Administrativo</h1>
      <div class='flex items-center space-x-4'>
        <span class='text-gray-600'>Bienvenido, {user.firstName}</span>
        <UserButton />
      </div>
    </div>

    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8'>
      <div class='bg-blue-50 p-6 rounded-lg border border-blue-200'>
        <h3 class='text-lg font-semibold text-blue-900 mb-2'>Configuración</h3>
        <p class='text-blue-700'>Gestionar configuración de la página</p>
      </div>

      <div class='bg-green-50 p-6 rounded-lg border border-green-200'>
        <h3 class='text-lg font-semibold text-green-900 mb-2'>Clientes</h3>
        <p class='text-green-700'>Administrar clientes registrados</p>
      </div>

      <div class='bg-yellow-50 p-6 rounded-lg border border-yellow-200'>
        <h3 class='text-lg font-semibold text-yellow-900 mb-2'>Presupuestos</h3>
        <p class='text-yellow-700'>Gestionar solicitudes de presupuestos</p>
      </div>

      <div class='bg-purple-50 p-6 rounded-lg border border-purple-200'>
        <h3 class='text-lg font-semibold text-purple-900 mb-2'>Órdenes</h3>
        <p class='text-purple-700'>Administrar órdenes de compra</p>
      </div>
    </div>

    <div class='bg-gray-50 p-4 rounded-lg'>
      <h2 class='text-xl font-semibold mb-2'>Información de sesión:</h2>
      <div class='text-sm text-gray-600 space-y-1'>
        <div><strong>Usuario ID:</strong> {user.id}</div>
        <div><strong>Nombre:</strong> {user.firstName}</div>
        <div><strong>Email:</strong> {user.emailAddresses[0].emailAddress}</div>
        <div><strong>Rol:</strong> {user.publicMetadata.role}</div>
      </div>
    </div>
  </div>
</div>
