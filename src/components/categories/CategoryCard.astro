---
import { Image } from 'astro:assets';

const { category } = Astro.props;
---

<a
  href={`/categoria/${category.slug}`}
  class='img-appear group w-62 h-auto overflow-hidden border rounded-sm hover:cursor-pointer'
>
  <div
    class='relative aspect-square overflow-hidden rounded-t-sm bg-background'
  >
    <Image
      src={category.image?.url || '/placeholder.svg'}
      alt={category.image?.alt || category.name}
      width={250}
      height={250}
      class='object-contain w-full h-full transition-transform group-hover:scale-105'
    />
    <div
      class='absolute inset-0 flex items-center justify-center bg-black/80 opacity-0 transition-opacity duration-300 group-hover:opacity-100'
    >
      <p class='text-center text-sm text-white'>{category.description}</p>
    </div>
  </div>
  <div class='my-4 space-y-1 text-center'>
    <h3
      class='font-medium transition-colors duration-300 group-hover:text-orange-500'
    >
      {category.name}
    </h3>
  </div>
</a>
