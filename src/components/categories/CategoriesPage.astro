---
import CategoryCard from './CategoryCard.astro';
import type { Category } from '@/shared/types';

const { categories } = Astro.props;
---

<div class='container mx-auto max-w-[1200px]'>
  <h2 class='text-lg font-medium'></h2>Categor√≠as
</div>

<section class='container relative px-4 md:px-20 pb-8'>
  <div class='flex flex-col items-center gap-12 lg:gap-16'>
    <div class='flex flex-wrap justify-center gap-6 pt-24'>
      {
        categories.map((category: Category) => (
          <CategoryCard category={category} />
        ))
      }
    </div>
  </div>
</section>
