---
// Recibir el usuario como prop desde la página
const user = await Astro.locals.currentUser();
---

<div class='container mx-auto px-4 py-8'>
  <div class='bg-white rounded-lg shadow-md p-6'>
    <div class='flex justify-between items-center mb-6'>
      <h1 class='text-3xl font-bold text-gray-900'>Mi Cuenta</h1>
      <div class='flex items-center space-x-4'>
        <span class='text-gray-600'>Hola, {user?.firstName}</span>
        <form action='/api/logout' method='POST'>
          <button
            type='submit'
            class='bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm transition-colors'
          >
            Cerrar Sesión
          </button>
        </form>
      </div>
    </div>

    <div class='grid grid-cols-1 md:grid-cols-2 gap-6 mb-8'>
      <div class='bg-blue-50 p-6 rounded-lg border border-blue-200'>
        <h3 class='text-lg font-semibold text-blue-900 mb-2'>
          Mis Presupuestos
        </h3>
        <p class='text-blue-700'>Ver presupuestos solicitados</p>
      </div>

      <div class='bg-green-50 p-6 rounded-lg border border-green-200'>
        <h3 class='text-lg font-semibold text-green-900 mb-2'>Mis Órdenes</h3>
        <p class='text-green-700'>Historial de órdenes</p>
      </div>
    </div>

    <div class='bg-gray-50 p-4 rounded-lg'>
      <h2 class='text-xl font-semibold mb-2'>Información de perfil:</h2>
      <div class='text-sm text-gray-600 space-y-1'>
        <div><strong>Usuario ID:</strong> {user?.id}</div>
        <div><strong>Nombre:</strong> {user?.firstName}</div>
        <div>
          <strong>Email:</strong>
          {user?.emailAddresses[0].emailAddress}
        </div>
      </div>
    </div>
  </div>
</div>
