---
import Image from 'astro/components/Image.astro';

const { hero, heroImageData, heroImageLogoData } = Astro.props;
---

<section class='container relative px-4 py-16 md:px-20 md:py-24 lg:py-32'>
  <div class='flex flex-col lg:flex-row items-center gap-12 lg:gap-16'>
    <div class='text-center'>
      <div class='group relative'>
        <Image
          class='drop-shadow-lg transition-all duration-300 group-hover:scale-105 group-hover:drop-shadow-3xl group-hover:shadow-orange-500/50 mx-auto'
          src={heroImageLogoData.url}
          alt={heroImageLogoData.alt}
          width={100}
          height={100}
        />
      </div>
      {/* Título principal mejorado */}
      <h2
        class='font-montserrat text-4xl font-semibold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl mt-8'
      >
        <span
          class='bg-gradient-to-r from-orange-600 via-red-600 to-orange-700 bg-clip-text text-transparent drop-shadow-sm'
        >
          {hero.title || 'Premiarte'}
        </span>
      </h2>
      {/* Descripción mejorada */}
      <div
        class='max-w-2xl text-lg leading-relaxed text-muted-foreground md:text-xl mt-8'
      >
        <p>{hero.text}</p>
      </div>

      {/* Botones de acción mejorados */}
      <div
        class='flex flex-col justify-center gap-4 pt-4 sm:flex-row lg:justify-start mt-8'
      >
        <button
          class='rounded-lg bg-gradient-to-r from-red-600 to-orange-600 px-8 py-4 text-lg font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105 hover:from-red-700 hover:to-orange-700 hover:shadow-2xl'
        >
          <a href={hero.buttonLink}>{hero.buttonText}</a>
        </button>
        <button
          class='rounded-lg border-2 border-orange-600 px-8 py-4 text-lg font-semibold text-orange-600 transition-all duration-300 hover:scale-105 hover:bg-orange-600 hover:text-white hover:shadow-lg'
        >
          Ofertas Especiales
        </button>
      </div>
    </div>
    {/* Imagen lateral mejorada */}
    <div class='group relative'>
      <div
        class='relative h-[300px] overflow-hidden shadow-2xl sm:h-[400px] md:h-[450px] lg:h-[550px]'
      >
        {
          /* className='object-cover transition-transform duration-700 group-hover:scale-110'  */
        }
        <Image
          src={heroImageData.url}
          alt={heroImageData.alt}
          class='object-contain w-full h-full'
          priority
          width={500}
          height={500}
        />
        <div
          class='absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100'
        >
        </div>
      </div>

      {/* Efecto de brillo */}
      <div
        class='absolute inset-0 -z-10 scale-110 bg-gradient-to-r from-orange-500/10 to-red-500/10 opacity-0 blur-2xl transition-opacity duration-500 group-hover:opacity-100'
      >
      </div>
    </div>
  </div>
</section>
