---
// src/pages/dashboard/[...path].astro
import MainLayout from '@/layouts/MainLayout.astro';
import DashboardApp from '@/components/dashboard/DashboardApp.tsx';
---

<MainLayout title='Dashboard - Premiarte'>
  <div id='loading-spinner' class='loading-container'>
    <div class='spinner'></div>
    <p class='loading-text'>Cargando dashboard...</p>
  </div>

  <div id='root'>
    <DashboardApp client:only='react' />
  </div>
</MainLayout>

<style>
  .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    gap: 1rem;
    /* background-color: #f9fafb; */
  }

  .spinner {
    width: 48px;
    height: 48px;
    border: 4px solid #e5e7eb;
    border-top-color: #3b82f6;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .loading-text {
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  #root {
    display: none;
  }

  #root.loaded {
    display: block;
  }

  #loading-spinner.hidden {
    display: none;
  }
</style>
